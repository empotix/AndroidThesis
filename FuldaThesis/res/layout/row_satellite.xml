<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="80px"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/imgCoupon"
        android:layout_width="80px"
        android:layout_height="80px"
        android:layout_marginRight="6dip"
        android:src="@drawable/ic_launcher" />

    <LinearLayout
        android:id="@+id/linearLayout1"
        android:layout_width="160px"
        android:layout_height="match_parent"
        android:orientation="vertical" >


        <TextView
            android:id="@+id/txtPrn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtElevation"
            android:text="prn"
            android:textSize="10dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtElevation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtPrn"
            android:text="Elevation"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtAlmanac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txtElevation"
            android:text="Almanac"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtSnr"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true"
            android:text="Snr"
            android:textSize="10dp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayout2"
        android:layout_width="160px"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtSatType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPrn"
            android:text="sattype"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtAzimuth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/txtPrn"
            android:text="azimuth"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtEphermis"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="Ephermis"
            android:textSize="10dp" />

        <TextView
            android:id="@+id/txtUsedInFix"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="used in fix"
            android:textSize="10dp" />
    </LinearLayout>

</LinearLayout>